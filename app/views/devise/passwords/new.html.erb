<% @title="AnyMarket - Password help" %>
<div id="forgot-password">
	
	<h3>Forgot your password?</h3>
	<h4>Let's get you a new one.</h4>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		<%= devise_error_messages! %>

		<div>
			<%= f.email_field :email, autofocus: true, :placeholder => "Email" %></div>

		<%= f.submit "Send me reset password instructions", :id => "submit_item_btn"  %>
	<% end %>

	<a href="#" id="login-button">Login</a>
	<a href="/">Sign up</a>
	<a href="/users/confirmation/new">Didn't receive confirmation instructions?</a>
	
</div>