<h1><%= @product.name %></h1>
<h3><%= link_to "Edit listing", edit_item_path(@product), :method => :get %></h3>
<h3><%= link_to "Delete listing", destroy_item_path(@product), method: :delete, data: { confirm: "Are you sure? Deleting a listing cannot be undone."} %></h3>
<h2>$<%= @product.decimal_price %></h2>
<h3>Listed by <%= User.find(@product.user_id).first_name %> <%= User.find(@product.user_id).last_name %></h3>
<h3>Description:</h3>
<p><%= @product.description %></p>
<%= image_tag @product.photo.url(:medium) if @product.photo? %>
<h3>Category:</h3>
<p><%= @product.category.name %></p>