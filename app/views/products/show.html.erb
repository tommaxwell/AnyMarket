<% @title=@product.name + '- AnyMarket' %>
<div id="listing-container">
  <div id="product_right">
    <h2 id="product-title"><%= @product.name %></h2>
    <h3 id="by-info">by <a href="/users/<%= @product.user_id %>"><%= User.find(@product.user_id).first_name %> <%= User.find(@product.user_id).last_name %></a><a href="/users/<%= @product.user_id %>"><%= image_tag User.find(@product.user_id).avatar.url(:thumb).sub('http://s3.amazonaws.com/anymarket/','http://anymarket.s3.amazonaws.com/'), :id => "product_profile_picture", :width => "30", :height => "30" %></a></h3>
		<h3 id="green-price"><%= number_to_currency(@product.decimal_price, precision: 2) %></h3>
		<% if user_signed_in? %>
			<% if @product.user_id == current_user.id %>
				<h4 style="display:inline; margin-right:5px" class="productmod"><%= link_to "Edit listing", edit_item_path(@product), :method => :get %></h4>&middot;<h4 style="display:inline; margin-left:5px" class="productmod"><%= link_to "Delete listing", destroy_item_path(@product), method: :delete, data: { confirm: "Are you sure? Deleting a listing cannot be undone."} %></h4><br />
			<% end %>
		<% end %>
    <hr>
    <% if @product.sold_value === true %>
      <input type="submit" value="Already sold!" width="200px" disabled="true"><br />
    <% else %>
      <input type="submit" value="Purchase" width="200px"><br />
      <p class="guarantee">Risk-free, 100% money-back guarantee.</p>
      <hr>
      <input type="submit" value="Ask a question" id="ask-question">
    <% end %>
    <hr>
    <% if @product.about_delivery? %>
    <div id="about_delivery_box"><h4>Seller's Meeting Preference</h4><%= @product.about_delivery %></div>
    <% else %>
    <% end %>
		<div id="share-links">
			<h3 style="color:black">Share this item:</h3>
			<a href="https://twitter.com/share" class="twitter-share-button" data-via="anymarket" data-related="anymarket" data-count="none">Tweet</a>
<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
		</div>
		<hr>
		<% otherlistings = User.find(@product.user_id).products.limit(2).where.not(id: @product.id) %>
		<% if otherlistings.any? %>
		<h4 id="otherlistings">More listings by <%= User.find(@product.user_id).first_name %>:</h4>
			<% otherlistings.each do |f| %>
				<div class="listing">
            <h4 class="other-listings"><%= link_to f.name, view_item_path(f.id) %></h4><p><%= f.description[0..65].gsub(/\s\w+\s*$/, '...') %></p><p class="price"><%= number_to_currency(f.decimal_price, precision: 2) %></p>
          </div>
			<% end %>
		<% end %>
  </div>

  <div id="product_left">
		<%= image_tag @product.photo.url.sub('http://s3.amazonaws.com/anymarket/','http://anymarket.s3.amazonaws.com/') if @product.photo? %><br />
    <h3>Description:</h3>
    <p><%= @product.description %></p>
    <hr class="black-hr">
    <% if @product.category_id? %>
      <h3>Category:</h3>
      <a href="/categories/<%= @product.category.id %>" id="product-category-link"><%= @product.category.name %></a>
    <% else %>
    <% end %>
  </div>
</div>
<script type="text/javascript">
  $("#ask-question").click(function(){
    $.ajax({
      url: "/conversations/<%= @product.user_id %>/send_message",
      type: "get",
      data: {item: "<%= @product.name %>"}
    });
  });
</script>
<script type="text/javascript" async  data-pin-hover="true" src="//assets.pinterest.com/js/pinit.js"></script>