<% @title = @category.name + " on AnyMarket" %>
<% if_signed_in?(:user) %>
	<div id="category-page-wrapper">
		<div id="categories-page-wrapper">
			<h4>Explore Listings</h4>
			<% @categories.each do |f| %>
				<p class="category-page-category"><%= link_to f.name, view_category_path(f.id) %></p>
			<% end %>
	</div>
		<div id="category-header">
			<h2 class="page-header"><%= @category.name %> <small id="category-page-description"><%= @category.description %></small><% if current_user.school == "University of California, Berkeley" %><%= image_tag "ucb-logo.jpg", :class => "school-pic" %><% else %><% end %></h2>
			<% notsold = @products.where("sold_value = false").order("created_at DESC").paginate(:page => params[:page]) %>
			<% notsold.each do |f| %>
					<% if User.find(f.user_id).school == current_user.school %>
						<div class="listing">
							<a href="/users/<%= f.user_id %>" class="nounderline"><%= image_tag User.find(f.user_id).avatar.url(:thumb).sub('http://s3.amazonaws.com/anymarket/','http://anymarket.s3.amazonaws.com/'), :id => "categories_profile_picture", :width => "30", :height => "30" %></a><h4><%= link_to f.name, view_item_path(f.id) %></h4><% if f.photo? %><span id="camera-icon-preview" class="glyphicon glyphicon-camera preview_toggle" data-id="<%= f.id %>"></span><% else %><% end %><p><%= f.description[0..60].gsub(/\s\w+\s*$/, '...') %></p><p class="price"><%= number_to_currency(f.decimal_price, precision: 2) %></p>
						</div>
				<% else %>
				<% end %>
		<% end %>
		</div>
		<%= will_paginate @products %>
	</div>
